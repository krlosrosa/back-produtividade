generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Center {
  centerId        String            @id @unique
  description     String
  state           String
  cluster         String            @default("distribuicao")
  users           User[] // Relacionamento autom√°tico
  funcionarios    Funcionarios[]
  dadosTransporte DadosTransporte[]
}

model User {
  id              String            @id
  name            String
  password        String
  centerId        String
  token           String?
  center          Center            @relation(fields: [centerId], references: [centerId])
  dadosTransporte DadosTransporte[]
}

model Funcionarios {
  id              String            @id
  name            String
  centerId        String
  center          Center            @relation(fields: [centerId], references: [centerId])
  dadosTransporte DadosTransporte[]
}

model DadosTransporte {
  id            Int          @id @default(autoincrement())
  transporte    String
  empresa       String
  processo      String
  caixas        Int
  unidade       Int
  visitado      Int
  horaInicio    DateTime
  horaFim       DateTime?
  inicioPausa   DateTime?
  terminoPause  DateTime?
  centerId      String
  userId        String
  dataRegistro  DateTime
  funcionarioId String
  segmento      String
  funcionario   Funcionarios @relation(fields: [funcionarioId], references: [id])
  registradoPor User         @relation(fields: [userId], references: [id])
  center        Center       @relation(fields: [centerId], references: [centerId])
  items         Item[]
}

model Item {
  id                     Int    @id @default(autoincrement())
  empresa                String
  idPallet               String
  processo               String
  linhasPickingVisitadas Int
  quantidadeCaixa        Int
  quantidadeUnidade      Int
  idDemanda              Int
  transporte             String
  segmento               String

  dadosTransporte DadosTransporte @relation(fields: [idDemanda], references: [id])

  @@unique([idPallet, transporte, processo, segmento])
}
